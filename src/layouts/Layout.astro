---
import '@fontsource/cairo'
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style lang="scss" is:global>

    *,
    *::before,
    *::after {
        box-sizing: border-box;
    }

    :root {
        --bg-color: #2D2424;
        --heading-color: #E0C097;
        --text-color: #fff2e5;
        --text-highlight-color: #00ca94;

        --2xl: 3em;
        --xl: 2.25em;
        --lg: 1.875em;

        --md: 1.25em;
        --sm: 1.125em;
        --xs: 1.0em;
    }

    @media screen and (max-width: 640px) {
        :root {
            --2xl: 2.25em;
            --xl: 1.875em;
            --lg: 1.5em;

            --md: 1.125em;
            --sm: 1.0em;
            --xs: 0.875em;
        }   
    }

    html {
        font-family: 'Cairo', system-ui, sans-serif;
        background-color: var(--bg-color);
    }

    body {
        margin: 0;
    }

    code {
        font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
            Bitstream Vera Sans Mono, Courier New, monospace;
    }

    %heading {
        margin: 0;
        padding: 0;
        color: var(--heading-color);
        letter-spacing: 0.05em;
    }

    h1 {
        @extend %heading;
        font-size: var(--2xl);
    }

    h2 {
        @extend %heading;
        font-size: var(--xl);
    }

    h3 {
        @extend %heading;
        font-size: var(--lg);
    }

    p {
        margin: 0;
        padding: 0;
        color: var(--text-color);
        font-size: var(--sm);
        letter-spacing: 0.0875em;
    }

    span {
        color: var(--text-highlight-color);
    }

</style>