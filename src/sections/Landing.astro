---
import ButtonLink from "../components/ButtonLink.astro";
import Experience from "../components/Experience.jsx";

---

<section class="landing">

    <div class="center-container">

        <h1>
            Hi, I'm Haris
        </h1>


        <nav class="social-links">
            <ButtonLink src='https://blog.hraza.dev'>Blog</ButtonLink>
            <ButtonLink src='https://twitter.com/roombawulf'>Twitter</ButtonLink>
            <ButtonLink src='https://github.com/roombawulf/'>Github</ButtonLink>
        </nav>


        <div class="flex-container">

            <div class="mini-canvas">
                <Experience client:idle />
            </div>

            <div>
                <p>
                    I am a <span>web developer</span> based in the <span>United Kingdom.</span> I love everything to do with
                    computer graphics and learning <span>WebGL.</span> 
                </p>
                <p>
                    You can <span>contact me</span> for work.
                </p>
            <div>
        </div>

    </div>

</section>


<style lang="scss">
    .landing {
        display: grid;
        place-items: center;
        
        height: 100svh;
        max-width: 1920px;

        margin-top: -1rem;
        margin-inline: auto;
        padding-inline: 3rem;
    }
    @media screen and (max-width: 640px) {
        .landing {
            display: block;
            margin-top: 0rem;
            padding-inline: 1rem;
        }  
    }

    .center-container {
        height: fit-content;
    }

    .social-links{
        margin-bottom: 1rem;
        display: flex;
        gap: 1rem;
    }

    .flex-container {
        display: flex;
        gap: 2rem;
        justify-content: space-around;
    }
    .mini-canvas {
        flex-grow: 1;

        height: 50svh;
        width: 35vw;

        border-style: solid;
        border-width: 0.1rem;
        border-radius: var(--sm);
        border-color: var(--primary-color);
    }

    @media screen and (max-width: 1000px) {
        .flex-container {
            flex-direction: column;
        }
        .mini-canvas {
            height: 30svh;
            width: 100%;
        } 
    }

    p {
        max-inline-size: 60ch;
    }
</style>